.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color var(--background-color-secondary)
    border-color #42b983
  &.warning
    background-color var(--background-color-secondary)
    border-color #f4cd00
    .custom-block-title
      color darken(#f4cd00, 25%)
  &.danger
    background-color var(--background-color-secondary)
    border-color #f55
    .custom-block-title
      color #a33
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color var(--background-color-secondary)
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
